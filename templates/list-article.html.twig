{% extends 'base.html.twig' %}

        {% block metatitle %}
        <title>List-article</title>
        {% endblock metatitle %}

{% block main %}

<main>

    <section>
	
		{% for article in articles %}

			<article>
				<p>{{ article.title }}</p>
				<p>{{ article.description }}</p>
				<img src="{{ article.image }}" alt="{{ article.title }}" />
				<p>{{ article.content }}</p>
				<p>Créé le {{ article.createdAt | date()}}</p>
				<a href="{{ path('single-article', { 'id': article.id }) }}">Voir cet article</a>
				<a href="{{ path('delete-article', { 'id': article.id }) }}">Supprimer cet article</a>
			</article>

		{% endfor %}

	</section>


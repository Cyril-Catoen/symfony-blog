{% extends 'base.html.twig' %}

        {% block metatitle %}
        <title>Update-category</title>
        {% endblock metatitle %}

{% block main %}
<main>

     <section>
			<article style="background-color: grey">
				<p>{{ category.title }}</p>
				<p>{{ category.description }}</p>
				<p style="color: {{ category.color }}">{{ category.color }}</p>
				<p>Créé le {{ category.createdAt | date()}}</p>	
			</article>
	</section>

	<h1>Mettre à jour une catégorie</h1>
    {{ form(categoryForm) }}

</main>
{% endblock main %}